{
  "name": "celo-web-wallet",
  "version": "1.0.0",
  "description": "A lightweight web and desktop wallet for the Celo network",
  "keywords": [
    "Celo",
    "wallet"
  ],
  "author": "J M Rossy",
  "repository": {
    "type": "git",
    "url": "https://github.com/celo-tools/celo-web-wallet"
  },
  "homepage": "https://celowallet.app",
  "license": "MIT",
  "scripts": {
    "dev": "NODE_ENV=development webpack serve --devtool inline-cheap-source-map --mode development",
    "dev-win": "SET NODE_ENV=development && webpack serve --devtool inline-cheap-source-map --mode development",
    "build:dev": "NODE_ENV=development webpack --devtool source-map --mode development",
    "build:staging": "yarn clean && ./scripts/build.sh -n Alfajores",
    "build:prod": "yarn clean && ./scripts/build.sh -n Mainnet",
    "clean": "rm -rf dist dist-electron",
    "lint": "eslint src/**/*.ts src/**/*.tsx",
    "test": "NODE_ENV=test jasmine --random=false",
    "test:all": "yarn test && yarn lint",
    "electron:postinstall": "electron-builder install-app-deps",
    "electron:build": "yarn clean && ./scripts/build.sh -n Mainnet -e",
    "electron:dev": "yarn electron:build && electron ./dist/main.js --enable-logging",
    "electron:start": "electron ./dist/main.js --enable-logging",
    "electron:dist": "NODE_ENV=production DEBUG=electron-builder electron-builder"
  },
  "build": {
    "appId": "CeloWallet",
    "productName": "Celo Wallet",
    "directories": {
      "app": "dist",
      "output": "dist-electron",
      "buildResources": "electron/build"
    },
    "mac": {
      "category": "public.app-category.utilities"
    }
  },
  "dependencies": {
    "@celo-tools/celo-ethers-wrapper": "^0.0.5",
    "@emotion/react": "^11.1.5",
    "@ledgerhq/hw-app-eth": "^5.44.1",
    "@ledgerhq/hw-transport-node-hid-noevents": "^5.43.0",
    "@ledgerhq/hw-transport-u2f": "5.36.0-deprecated",
    "@ledgerhq/hw-transport-webusb": "^5.43.0",
    "@metamask/jazzicon": "^2.0.0",
    "@reduxjs/toolkit": "^1.5.0",
    "buffer": "^6.0.3",
    "ethers": "^5.0.31",
    "frappe-charts": "^1.5.7",
    "history": "^5.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-frappe-charts": "^4.0.0",
    "react-redux": "^7.2.2",
    "react-router": "^6.0.0-beta.0",
    "react-router-dom": "^6.0.0-beta.0",
    "redux-persist": "^6.0.0",
    "redux-saga": "^1.1.3",
    "typed-redux-saga": "^1.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.13.1",
    "@babel/plugin-transform-runtime": "^7.13.7",
    "@babel/plugin-transform-strict-mode": "^7.12.13",
    "@babel/preset-env": "^7.13.5",
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.13.0",
    "@babel/register": "^7.13.0",
    "@emotion/babel-plugin": "^11.2.0",
    "@testing-library/react": "^11.2.5",
    "@types/jasmine": "^3.6.4",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/react-redux": "^7.1.16",
    "@types/redux-mock-store": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "babel-loader": "^8.2.2",
    "babel-plugin-module-name-mapper": "^1.2.0",
    "copy-webpack-plugin": "^7.0.0",
    "css-loader": "^5.1.0",
    "electron": "^11.3.0",
    "electron-builder": "^22.9.1",
    "eslint": "^7.20.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-react": "^7.22.0",
    "jasmine": "^3.6.4",
    "jsdom": "^16.4.0",
    "node-fetch": "^2.6.1",
    "prettier": "2.2.1",
    "redux-mock-store": "^1.5.4",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.17",
    "typescript": "4.1.5",
    "webpack": "^5.24.2",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  }
}
